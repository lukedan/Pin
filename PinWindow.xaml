<Window x:Class="Pin.PinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pin"
        mc:Ignorable="d" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStyle="None" Background="Transparent" AllowsTransparency="True">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="None" >
            <Image.Effect>
                <DropShadowEffect x:Name="imageEffect" ShadowDepth="0" BlurRadius="50"/>
            </Image.Effect>
        </Image>
    </Grid>
</Window>
